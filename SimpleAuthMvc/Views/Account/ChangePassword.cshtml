@using SimpleAuthMvc.ViewModels
@model ChangePasswordViewModel;
@{
    ViewData["Title"] = "ChangePassword";
}
<h2>ChangePassword</h2>
<form asp-action="Login" method="post" class="w-50">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Password</label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <input type="submit" value="Change Password" class="btn btn-primary w-100 p-2" />
    <div class="text-center">
        <a asp-controller="Home" asp-action="Index" class="btn ">Back</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}