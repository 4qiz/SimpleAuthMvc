@using SimpleAuthMvc.ViewModels
@model LoginViewModel;
@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>
<form asp-action="Login" method="post" class="w-50">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="float-end">
        <a asp-controller="Account" asp-action="VerifyEmail" >Forgot password</a>
    </div>
    <div class="form-check mb-3">
        <label class="form-check-label">
            <input asp-for="RememberMe" class="form-check-input" />
            @Html.DisplayNameFor(u=>u.RememberMe)
        </label>
    </div>
    <input type="submit" value="Login" class="btn btn-primary w-100 p-2" />
    <div class="text-center">
        <p><a asp-controller="Account" asp-action="Register" >Register</a></p>
        <a asp-controller="Home" asp-action="Index" class="btn ">Back</a>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}